<% content_for :content do %>

  <div class="theme-gencat">

    <div class="column">

      <div class="pure-g">

        <div class="pure-u-1 pure-u-md-7-24">

          <% if @sidebar_departments.any? %>
            <ul>
              <% @sidebar_departments.each do |department| %>
                <li class="<%= class_if('strong', try(:current_department) == department) %>">
                  <%= link_to department.name, gobierto_people_department_people_path(department_slug: department.slug) %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <%= t(".no_departments_within_dates") %>
          <% end %>

        </div>

        <div class="pure-u-1 pure-u-md-17-24 main_people_content">

          <%= yield %>

        </div>

      </div>

    </div>

  </div>

<% end %>


<%= render template: "gobierto_people/layouts/application" %>
