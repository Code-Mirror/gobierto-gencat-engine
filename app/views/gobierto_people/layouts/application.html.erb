<% content_for :javascript_module_link do %>
  <!-- load module javascript specifics -->
  <%= javascript_pack_tag 'people', 'data-turbolinks-track': true %>
  <%= javascript_pack_tag 'gencat', 'data-turbolinks-track': true %>
<% end %>

<% content_for(:current_submodule_link) do %>
  <% if controller_name == "welcome" %>
    <%= link_to t("layouts.application.start"), gobierto_people_root_path %>
  <% end %>
<% end %>

<% content_for :content do %>

  <%= yield %>

  <%= render "gobierto_people/shared/breadcrumb" %>

  <%= javascript_tag do %>
    window.GobiertoPeople.gencat_common_controller.load({
      people_events_first_date: '<%= all_start_date.try(:iso8601) %>'
    });

    window.GobiertoPeople.gencat_common_controller.updatePageHeader({
      pageTitle: "<%= raw @meta_tags["title"] %>"
    });
  <% end %>

<% end %>

<%= render template: "layouts/application" %>
