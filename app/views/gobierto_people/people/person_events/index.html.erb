<div class="row">
  <div class="col-md-12">

    <figure>

      <figcaption class="mb_20"><%= t(".title", person_name: @person.name) %></figcaption>

      <ul class="color-1 transparent">

        <% cache "site-#{current_site.id}-person-#{@person.id}-events" do %>
          <% @events.each do |event| %>
            <%= render "event", event: event %>
          <% end %>
        <% end %>

      </ul>

    </figure>

  </div>
</div>
