<li class="table-item" id="<%= trip.to_anchor %>">

  <div class="row">
    <div class="col-md-8">
      <p><%= trip.original_destinations_attribute %></p>
      <p><%= trip.purpose %></p>
    </div>

    <div class="col-md-2 <%= class_if('pull-right', !meaningful_date_range?(trip.duration_dates, only_date: true)) %>">
      <p><%= trip.formatted_start_date %></p>
    </div>

    <% if meaningful_date_range?(trip.duration_dates, only_date: true) %>
      â†’
      <div class="col-md-2">
        <p><%= trip.formatted_end_date %></p>
      </div>
    <% end %>

  </div>

  <div class="row">
    <div class="col-md-12">
      <p><%= trip.description %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <div class="col-md-6">
        <div class="row"><strong><%= t(".company") %></strong></div>

        <% if trip.company_members.any? %>
          <% trip.company_members.each do |member| %>
            <div class="row"><%= member %></div>
          <% end %>
        <% else %>
          -
        <% end %>
      </div>


      <div class="col-md-6">
        <div class="row"><strong><%= t(".expenses") %></strong></div>

        <% if trip.expenses.any? %>
          <% trip.expenses.each do |expense| %>
            <% unless expense[:amount].zero? %>
              <div class="row">
                <div class="col-md-6"><%= expense[:kind] %></div>
                <div class="col-md-6"><strong><%= number_with_delimiter(expense[:amount]) %></strong></div>
              </div>
            <% end %>
          <% end %>
        <% else %>
          -
        <% end %>
      </div>

    </div>
  </div>

</li>
