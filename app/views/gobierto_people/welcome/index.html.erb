<div class="theme-gencat">

  <section class="row">
    <p class="col-md-9"><%= t(".title") %></p>
    <div class="col-md-3">
      <%= render "gobierto_people/shared/datepicker" %>
    </div>
  </section>

  <section>
    <div class="fpca_distribuidora pd-30">
      <div class="llistat_destacat_text_avancat">
        <div class="llistat_col-lg-3 nova-altura-dist">

          <div class="col-xs-12 corrector-margins col-sm-4">
            <div class="box color-1 distribuidora-nova-3">

              <div class="color-decorator">
                <h1><%= number_with_delimiter @home_statistics[:total_events] %></h1>
                <h5>
                  <div><strong></strong></div>
                  <div><strong><%= t(".meetings_box_title") %></strong></div>
                </h5>
              </div>

              <div class="margin_top_xs">
                <span><%= t(".departments_rowchart_title") %></span>
                <div id="departments_events_rowchart" class="rowchart"></div>
              </div>

            </div>
          </div>

          <div class="col-xs-12 corrector-margins col-sm-4">
            <div class="box color-2 distribuidora-nova-3">

              <div class="color-decorator">
                <h1><%= number_with_delimiter @home_statistics[:total_interest_groups] %></h1>
                <h5>
                  <div><strong><%= t(".interest_groups_box_title") %></strong></div>
                  <span><%= t(".interest_groups_box_subtitle") %></span>
                </h5>
              </div>

              <div class="margin_top_xs">
                <span><%= t(".interest_groups_rowchart_title") %></span>
                <div id="interest_groups_events_rowchart" class="rowchart"></div>
              </div>

            </div>
          </div>

          <div class="col-xs-12 corrector-margins col-sm-4">
            <div class="box color-3 distribuidora-nova-3">

              <div class="color-decorator">
                <h1><%= number_with_delimiter @home_statistics[:total_people_with_attendances] %></h1>
                <h5>
                  <div><strong><%= t(".people_box_title") %></strong></div>
                  <span><%= t(".people_box_subtitle") %></span>
                </h5>
              </div>

              <div class="margin_top_xs">
                <span><%= t(".people_rowchart_title") %></span>
                <div id="people_events_rowchart" class="rowchart"></div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </section>

  <hr>

  <section id="map-chart">
    <p><strong><%= t(".map_title") %></strong></p>
    <%= render "gobierto_people/shared/map" %>
    <div id="people_events_punchcard" class="punchcard color-2 transparent"></div>
  </section>

  <hr>

  <section class="row">

    <div class="col-md-6">
      <section>
        <p><strong><%= t(".gifts") %></strong></p>
        <p><%= t(".gifts_description") %></p>
        <div class="alert alert-warning">
          <small><%= t(".gifts_coc") %></small>
        </div>
      </section>

      <figure>
        <figcaption class="mb_20"><%= t(".last_gifts") %></figcaption>
        <ul class="color-3 transparent">
          <% @gifts.each do |gift| %>
            <%= render(
                  "table_item",
                  title: gift.name,
                  resource: gift,
                  display_date: gift.date
                ) %>
          <% end %>
        </ul>
      </figure>

      <div class="pd-15">
        <%= link_to gobierto_people_gifts_path, class: "show-more color-3", data: { turbolinks: false } do %>
          <small><%= t("gobierto_people.shared.view_all") %></small>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <section>
        <p><strong><%= t(".invitations") %></strong></p>
        <p><%= t(".invitations_description") %></p>
        <div class="alert alert-warning">
          <small><%= t(".invitations_coc") %></small>
        </div>
      </section>

      <figure>
        <figcaption class="mb_20"><%= t(".last_invitations") %></figcaption>
        <ul class="color-3 transparent">
          <% @invitations.each do |invitation| %>
            <%= render(
                  "table_item",
                  title: invitation.title,
                  resource: invitation,
                  display_date_range: [invitation.start_date, invitation.end_date]
                ) %>
          <% end %>
        </ul>
      </figure>

      <div class="pd-15">
        <%= link_to gobierto_people_invitations_path, class: "show-more color-3", data: { turbolinks: false } do %>
          <small><%= t("gobierto_people.shared.view_all") %></small>
        <% end %>
      </div>
    </div>

  </section>

  <section class="row">
    <div class="col-md-12 bg-danger p_2">
      <%= t("gobierto_people.shared.view_open_data_portal") %>:
      <%= render 'gobierto_people/shared/open_data_portal_links/people' %> -
      <%= render 'gobierto_people/shared/open_data_portal_links/interest_groups' %> -
      <%= render 'gobierto_people/shared/open_data_portal_links/events_with_interest_groups' %> -
      <%= render 'gobierto_people/shared/open_data_portal_links/trips_and_invitations' %> -
      <%= render 'gobierto_people/shared/open_data_portal_links/gifts' %>
    </div>
  </section>

</div>

<%= javascript_tag do %>
  window.GobiertoPeople.gencat_welcome_controller.index({
    departments_events_rowchart_api_path: '<%= gobierto_people_api_v1_departments_path %>',
    interest_groups_events_rowchart_api_path: '<%= gobierto_people_api_v1_interest_groups_path %>',
    people_events_rowchart_api_path: '<%= gobierto_people_api_v1_people_path %>',
    department_people_events_punchcard_api_path: '<%= gobierto_people_api_v1_people_path(include_history: true, limit: 14) %>'
  });
<% end %>
